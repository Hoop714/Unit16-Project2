<div id="home">

  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Globetrotter</a>
  </nav>

  <div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-5">Welcome to Globetrotter!</h1>
    <p class="lead">This is a simple app to help you manage your trip.</p>
    <hr class="my-3">
    <p>Let's get started by filling the following form.</p>
  </div>


  <!--Form-->
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label for="destination" class="col-form-label">Destination</label>
            <input type="text" id="destination" class="form-control" aria-describedby="example-text"
              placeholder="Please enter your Destination here">
          </div>

          <div class="form-group">
            <label class="col-form-label">Date</label>
            <div class="form-group row">
              <label for="date-start" class="col-1 col-form-label">From</label>
              <div class="col-5">
                <input class="form-control" type="date" value="2011-08-19" id="date-start">
              </div>
              <label for="date-end" class="col-1 col-form-label">To</label>
              <div class="col-5">
                <input class="form-control" type="date" value="2011-08-19" id="date-end">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="airline" class="col-form-label">Airline (Optional)</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
              placeholder="Please enter your airline here">
          </div>

          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
  <!--Form end-->
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
